{
    "settings": {
      "index": {
        "similarity": {
          "tf": {
            "type": "scripted",
            "script": {
              "source": "double tf = Math.sqrt(doc.freq); double norm = 1/Math.sqrt(doc.length); return query.boost * tf * norm;"
            }
          }
        },
        "analysis": {
          "tokenizer": {
            "kuromoji_tokenizer": {
              "type": "kuromoji_tokenizer",
              "mode": "search",
              "discard_punctuation": true,
              "resources_path": "/usr/share/elasticsearch/plugins/analysis-kuromoji/",
              "settings_path": "/usr/share/elasticsearch/plugins/analysis-kuromoji/kuromoji.json"
            }
          },
          "analyzer": {
            "kuromoji_analyzer": {
              "tokenizer": "kuromoji_tokenizer",
              "type": "custom",
              "char_filter": [],
              "filter": [
                "kuromoji_part_of_speech",
                "ja_stop",
                "kuromoji_baseform"
              ]
            }
          }
        }
      }
    },
    "mappings": {
      "dynamic": "true",
      "_source": {
        "enabled": "true"
      },
      "properties": {
        "text_kuromoji": {
          "type": "text",
          "analyzer": "kuromoji_analyzer",
          "search_analyzer": "kuromoji_analyzer",
          "similarity": "tf"
        },
        "vector": {
          "type": "dense_vector",
          "dims": 768
        }
      }
    }
  }